<script>
 document.getElementById('download-btn').addEventListener('click', function() {
    const customerName = '<%= soldData.customerName %>'; // Replace this with the actual variable that holds the customer's name
    const element = document.getElementById('download_section');
    const fileName = `sold_out(${customerName}).pdf`;

    html2pdf().from(element).set({
        margin:       0,
        filename:     fileName,
        image:        { type: 'jpeg', quality: 0.98 },
        html2canvas:  { dpi: 192, letterRendering: true },
        jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }
    }).save();
});





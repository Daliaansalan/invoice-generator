<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="assets/images/favicon/icon.png" />
    <title>Mallu Mechanic.UK Invoice</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />

    <style>
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        background-color: #12151c;
      }
      .navbar-brand img {
        width: 250px;
      }
      .page-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: white;
      }
      .custom-dropdown-btn {
        font-size: 1.2rem;
        padding: 10px 20px;
      }

      .custom-dropdown-menu {
        background-color: #f8f9fa; /* Light background color */
        border: 1px solid #ced4da; /* Border color */
      }

      .custom-dropdown-item {
        font-size: 1rem;
        padding: 10px 20px;
      }

      .custom-dropdown-item:hover {
        background-color: #ffc107; /* Hover background color */
        color: #fff; /* Hover text color */
      }
      .logout-item {
        background-color: #dc3545; /* Red background for logout */
        color: white;
      }
      .logout-item:hover {
        background-color: #a71d2a; /* Darker red on hover */
      }
    </style>
  </head>
  <body oncontextmenu="return false;">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light">
      <a class="navbar-brand" href="/"
        ><img src="assets/images/Invoice/logo.png" alt="Logo"
      /></a>
      <div class="page-title mx-auto">Booking Confrimation Invoice</div>
      <div class="dropdown">
        <button
          class="btn btn-warning dropdown-toggle custom-dropdown-btn"
          type="button"
          id="dropdownMenuButton"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Menu
        </button>
        <div
          class="dropdown-menu dropdown-menu-right custom-dropdown-menu"
          aria-labelledby="dropdownMenuButton"
        >
          <a class="dropdown-item custom-dropdown-item" href="/Customer-Details"
            >Customer Details Form</a
          >
          <a class="dropdown-item custom-dropdown-item" href="/Service-Details"
            >Service Details Form</a
          >
          <a
            class="dropdown-item custom-dropdown-item"
            href="/Booking-Confrimation"
            >Booking Invoice Generator</a
          >
          <a class="dropdown-item custom-dropdown-item" href="/Sold"
            >Sold Out Invoice Generator</a
          >
          <a class="dropdown-item custom-dropdown-item logout-item" href="/logout"
          >Logout</a>
        </div>
      </div>
    </nav>

    <!-- Form -->
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Customer Details</h2>
        <a href="/" class="btn btn-secondary">Back</a>
      </div>
      <form action="/confrimation-invoice" method="POST">
        <div class="row">
          <div class="form-group col">
            <label for="customerName">Name:</label>
            <input
              type="text"
              class="form-control"
              id="customerName"
              name="customerName"
              required
              placeholder="Enter Name"
            />
          </div>
          <div class="form-group col">
            <label for="customerDOB">DOB:</label>
            <input
              type="date"
              class="form-control"
              id="customerDOB"
              name="customerDOB"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="customerPhone">Phone:</label>
            <input
              type="tel"
              class="form-control"
              id="customerPhone"
              name="customerPhone"
              required
              placeholder="Enter Phone Number"
            />
          </div>
          <div class="form-group col">
            <label for="customerEmail">Email:</label>
            <input
              type="email"
              class="form-control"
              id="customerEmail"
              name="customerEmail"
              required
              placeholder="Enter Email"
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="customerAddress">Address:</label>
            <input
              type="text"
              class="form-control"
              id="customerAddress"
              name="customerAddress"
              required
              placeholder="Enter Address"
            />
          </div>
        </div>

        <h2>Car Details</h2>
        <div class="row">
          <div class="form-group col">
            <label for="carName">Car Name:</label>
            <input
              type="text"
              class="form-control"
              id="carName"
              name="carName"
              required
              placeholder="Enter Car Name"
            />
          </div>
          <div class="form-group col">
            <label for="carNumber">Car Number:</label>
            <input
              type="text"
              class="form-control"
              id="carNumber"
              name="carNumber"
              required
              placeholder="Enter Car Number"
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="carMiles">Miles:</label>
            <input
              type="text"
              class="form-control"
              id="carMiles"
              name="carMiles"
              required
              placeholder="Enter Miles"
            />
          </div>
          <div class="form-group col">
            <label for="carYear">Model Year:</label>
            <input
              type="number"
              class="form-control"
              id="carYear"
              name="carYear"
              required
              placeholder="Enter Year"
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="carCategory">Category:</label>
            <select
              class="form-control"
              id="carCategory"
              name="carCategory"
              required
              placeholder="Enter Category"
            >
              <option value="">Select Category</option>
              <option value="S">S</option>
              <option value="N">N</option>
              <option value="No Category">No Category</option>

            </select>
          </div>
          <div class="form-group col">
            <label for="carWarranty">Warranty:</label>
            <select
              class="form-control"
              id="carWarranty"
              name="carWarranty"
              required
            >
              <option value="">Select Warranty</option>
              <option value="3 months">3 Months</option>
              <option value="6 months">6 Months</option>
              <option value="No warranty">No warranty</option>

            </select>
          </div>
        </div>

        <h2>Payment Details</h2>
        <div class="row">
          <div class="form-group col">
            <label for="paymentAmount">Total Amount:</label>
            <input
              type="number"
              class="form-control"
              id="paymentAmount"
              name="paymentAmount"
              required
              placeholder="Enter Total Amount"
            />
          </div>
          <div class="form-group col">
            <label for="paidAmount">Initial Amount Paid:</label>
            <input
              type="number"
              class="form-control"
              id="paidAmount"
              name="paidAmount"
              required
              placeholder="Enter Initial Amount"
            />
          </div>
          <div class="form-group col">
            <label for="balanceDue">Balance Due:</label>
            <input
              type="number"
              class="form-control"
              id="balanceDue"
              name="balanceDue"
              required
              placeholder="Enter Balance Due"
              readonly
            />
          </div>
        </div>

        <button type="submit" class="btn btn-warning btn-lg btn-block mb-4">
          Generate Invoice
        </button>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
      document.getElementById('paymentAmount').addEventListener('input', updateBalanceDue);
      document.getElementById('paidAmount').addEventListener('input', updateBalanceDue);
    
      function updateBalanceDue() {
        const paymentAmount = parseFloat(document.getElementById('paymentAmount').value) || 0;
        const paidAmount = parseFloat(document.getElementById('paidAmount').value) || 0;
        const balanceDue = paymentAmount - paidAmount;
        document.getElementById('balanceDue').value = balanceDue.toFixed(2);
      }
    </script>
  </body>
</html>

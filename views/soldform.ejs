  <body oncontextmenu="return false;">
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Customer Details</h2>
        <a href="/" class="btn btn-secondary">Back</a>
      </div>
        <form action="/soldout-invoice" method="POST">

            <div class="row">
            <div class="form-group col">
                <label for="customerName">Name:</label>
                <input type="text" class="form-control" id="customerName" name="customerName" required placeholder="Enter Name">
            </div>
            <div class="form-group col">
                <label for="customerDOB">DOB:</label>
                <input type="date" class="form-control" id="customerDOB" name="customerDOB" required placeholder="Enter DOB">
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="customerPhone">Phone:</label>
                <input type="tel" class="form-control" id="customerPhone" name="customerPhone" required placeholder="Enter Phone Number">
            </div>
            <div class="form-group col">
                <label for="customerEmail">Email:</label>
                <input type="email" class="form-control" id="customerEmail" name="customerEmail" required placeholder="Enter Email">
            </div>
            </div>
            <div class="row">
            <div class="form-group col">
                <label for="customerAddress">Address:</label>
                <input type="text" class="form-control" id="customerAddress" name="customerAddress" required placeholder="Enter Address">
            </div>
        </div>
            <h2>Car Details</h2>
            <div class="row">
              <div class="form-group col">
                  <label for="paymentDate">Date of Booking:</label>
                  <input type="date" class="form-control" id="paymentDate" name="paymentDate" required placeholder="Enter Date of Booking">
              </div>
              <div class="form-group col">
                <label for="soldDate">Date of Sold:</label>
                <input type="date" class="form-control" id="soldDate" name="soldDate" required placeholder="Enter Date of sold">
            </div>
          </div>
            <div class="row">
            <div class="form-group col">
                <label for="carName">Car Name:</label>
                <input type="text" class="form-control" id="carName" name="carName" required placeholder="Enter Car Name">
            </div>
            <div class="form-group col">
                <label for="carNumber">Car Number:</label>
                <input type="text" class="form-control" id="carNumber" name="carNumber" required placeholder="Enter Car Number">
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="carMiles">Miles:</label>
                <input type="number" class="form-control" id="carMiles" name="carMiles" required placeholder="Enter Miles">
            </div>
            <div class="form-group col">
                <label for="carYear">Model Year:</label>
                <input type="number" class="form-control" id="carYear" name="carYear" required placeholder="Enter Year">
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="carCategory">Category:</label>
                <select class="form-control" id="carCategory" name="carCategory" required>
                    <option value="" >Select Category</option>
                    <option value="S">S</option>
                    <option value="N">N</option>
                    <option value="No Category">No Category</option>
                </select>
            </div>
            <div class="form-group col">
                <label for="carWarranty">Warranty:</label>
                <select class="form-control" id="carWarranty" name="carWarranty" required placeholder="Select Warranty">
                    <option value="">Select Warranty</option>
                    <option value="3 months">3 Months</option>
                    <option value="6 months">6 Months</option>
                    <option value="No warranty">No warranty</option>
                </select>
            </div>
        </div>
        <h2>Payment Details</h2>
        <div class="row">
          <div class="form-group col">
            <label for="paymentAmount">Total Amount:</label>
            <input
              type="number"
              class="form-control"
              id="paymentAmount"
              name="paymentAmount"
              required
              placeholder="Enter Total Amount Paid"
            />
          </div>
          <div class="form-group col">
            <label for="paidAmount">Initial Amount Paid:</label>
            <input
              type="number"
              class="form-control"
              id="paidAmount"
              name="paidAmount"
              required
              placeholder="Enter Initial Amount Paid"
            />
          </div>
          <div class="form-group col">
            <label for="fullAmount">Balance Amount paid:</label>
            <input
              type="number"
              class="form-control"
              id="fullAmount"
              name="fullAmount"
              required
              placeholder="Enter Balance Amount Paid"
            />
          </div>
          <div class="form-group col">
            <label for="roadTax">Road Tax:</label>
            <input
              type="number"
              class="form-control"
              id="roadTax"
              name="roadTax"
              required
              placeholder="Enter Road Tax"
            />
          </div>
          <div class="form-group col">
            <label for="balanceDue">Balance Due:</label>
            <input
              type="number"
              class="form-control"
              id="balanceDue"
              name="balanceDue"
              required
              placeholder="Enter Balance Due"
              readonly
            />
          </div>
        </div>
        
            <button type="submit" class="btn btn-warning btn-lg btn-block mb-4">Generate Invoice</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
      document.getElementById('paymentAmount').addEventListener('input', updateBalanceDue);
      document.getElementById('paidAmount').addEventListener('input', updateBalanceDue);
      document.getElementById('fullAmount').addEventListener('input', updateBalanceDue);
      document.getElementById('roadTax').addEventListener('input', updateBalanceDue);
    
      function updateBalanceDue() {
        const paymentAmount = parseFloat(document.getElementById('paymentAmount').value) || 0;
        const paidAmount = parseFloat(document.getElementById('paidAmount').value) || 0;
        const fullAmount = parseFloat(document.getElementById('fullAmount').value) || 0;
        const roadTax = parseFloat(document.getElementById('roadTax').value) || 0;
        const totalPaid = paidAmount + fullAmount + roadTax;
        const balanceDue = paymentAmount - totalPaid;

        document.getElementById('balanceDue').value = balanceDue > 0 ? balanceDue.toFixed(2) : '0.00';
      }
    </script>
</body>

